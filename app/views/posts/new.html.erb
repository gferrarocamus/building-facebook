<% provide(:title, 'New post') %>

<h2>New Post</h2>

<%= form_for(@post, remote: true) do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, class: 'w-100 rounded', rows: 8, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Post", class: 'btn button blue-button' %>
  </div>
<% end %>
